<div class="row">
  <div class="col col-login mx-auto">
    <%= render 'partial/hackathonlogo', local_assigns: {width: "90%", height: "90%"}%>

    <% if HackumassWeb::Application::PROJECTS_PUBLIC and Project.all.count > 0 %>
      <%= link_to "View #{HackumassWeb::Application::HACKATHON_NAME} #{HackumassWeb::Application::HACKATHON_VERSION} Projects", public_projects_path, class: 'btn btn-primary btn-block' %>
      <br />
    <% end %>


    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class: "card"}) do |f| %>
      <div class="card-body p-6">
        <div class="card-title">Login to your account</div>
        <div class="form-group">
          <label class="form-label">Email address</label>
          <%= f.email_field :email, placeholder: "Enter Email", autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="form-label">Password</label>
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control"%>
        </div>
        <div class="form-group">
          <label class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" />
            <span class="custom-control-label">Remember me</span>
          </label>
        </div>
        <div class="form-footer">
          <%= f.submit "Sign In", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <div class="text-center text-muted">
      <%= render "devise/shared/links" %>
      <br /><br />
      <%= render 'partial/hackathonfooter' %>
    </div>
  </div>
</div>